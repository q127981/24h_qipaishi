.page {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* Âç°ÁâáÈÄöÁî®Ê†∑Âºè */
.top-card, .info-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}
.qr-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  /* padding: 30rpx; */
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.top-card .tip{
  font-size: 24rpx;
  margin-bottom: 5rpx;
  color: #53aeeb;
}
/* È°∂ÈÉ®ËæìÂÖ•Âå∫Âüü */
.input-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.input-group.compact {
  flex: 1;
}

.input-group.compact .label {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.input-group.compact .label::before {
  content: '';
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #3498db, #9b59b6);
  border-radius: 3rpx;
  margin-right: 8rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s;
}

.input:focus {
  border-color: #3498db;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(52, 152, 219, 0.1);
}

.code-input {
  text-align: center;
  font-weight: 600;
  letter-spacing: 8rpx;
}

/* ÊåâÈíÆÊ†∑Âºè */
.btns {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.btn:active {
  transform: translateY(2rpx);
}

.btn-primary {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(52, 152, 219, 0.3);
}

.btn-secondary {
  background: var(--main-color);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(149, 165, 166, 0.3);
}

.btn-text {
  position: relative;
  z-index: 1;
}

/* ‰∫åÁª¥Á†ÅÂç°Áâá */
.qr-card {
  text-align: center;
}

.card-header {
  /* margin-bottom: 24rpx; */
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
  position: relative;
  display: inline-block;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #3498db, #9b59b6);
  border-radius: 2rpx;
}

.qr-tip {
  font-size: 26rpx;
  color: #3455e9;
  line-height: 1.4;
}

/* ‰ø°ÊÅØÂç°Áâá */
.info-card {
  animation: slideUp 0.5s ease;
}

.info-content {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  margin: 0 20rpx;
  word-break: break-all;
}

/* Áä∂ÊÄÅÈ¢úËâ≤ */
.status-success {
  color: #27ae60;
  font-weight: 600;
}

.status-warning {
  color: #f39c12;
  font-weight: 600;
}

.status-error {
  color: #e74c3c;
  font-weight: 600;
}

.status-default {
  color: #666;
}

/* Â§çÂà∂ÊåâÈíÆ */
.copy-btn {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.3);
}

.copy-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(52, 152, 219, 0.3);
}

.copy-text {
  position: relative;
  z-index: 1;
}

/* Ê≠•È™§ÊåáÂºï */
.steps-box {
  background: linear-gradient(135deg, #f8f9fa, #e8f4fd);
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #3498db;
}

.step-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.step-title::before {
  content: 'üìã';
  margin-right: 8rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-num {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #3498db, #9b59b6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  margin-right: 5rpx;
  flex-shrink: 0;
}

.step-text {
  flex: 1;
  font-size: 22rpx;
  color: #555;
  line-height: 1.5;
}

/* Âä®ÁîªÊïàÊûú */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ÂìçÂ∫îÂºèÈÄÇÈÖç */
@media (max-width: 750rpx) {
  .page {
    padding: 16rpx;
  }
  
  .top-card, .qr-card, .info-card {
    padding: 24rpx;
  }
  
  .input-row {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .btns {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .btn {
    height: 84rpx;
  }
  
  .info-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .info-label {
    min-width: auto;
  }
  
  .info-value {
    margin: 0;
    width: 100%;
  }
  
  .qr {
    width: 280rpx;
    height: 280rpx;
  }
}