/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
/* 头部搜索框 */
.top-search{
  display: flex;
  padding: 5rpx 10rpx;
  margin: 15rpx;
}
.top-search .left{
  background: #f7f8fa;
  width: 550rpx;
  margin-right: 20rpx;
  display: flex;
  height: 60rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.top-search .label{
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  border-right: 1rpx solid #ddd;
}
.top-search .label text{
  display: block;
  max-width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 6rpx;
}
.top-search .label icon{
  width: 0;
  height: 0;
  border-top: 10rpx solid var(--main-color);
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
}
.top-search .input{
  padding: 0 20rpx;
}
.top-search .right{
  color: #000;
  text-align: center;
  width: 90rpx;
}

.top-search .right text{
  display: block;
  font-size: 24rpx;
}
.banner{
  height: 400rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
  margin-top: 0rpx;
  text-align: center;
  background: #fff;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 100%;
}
.list .item{
  border-radius: 20rpx;
  margin: 0rpx 20rpx;
  background: rgb(255, 255, 255);
  height: 405rpx;
  margin-bottom: 20rpx;
}
.list .item .img{
  width: 100%;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
  /* border-radius: 20rpx; */
  height: 280rpx;
  margin-bottom: 10rpx;
  overflow:hidden;
}
.list .item .info{
  /* width: 100%; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* flex-wrap: wrap; */
  margin-left: 30rpx;
}
.list .item .address{
  width: 90%;
  font-size: 20rpx;
  color: rgb(85, 84, 84);
  margin-left: 30rpx;
}
.list .item .info .name{
  display: inline-block;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 36rpx;
  text-align: left;
  width: 400rpx;
  line-height: 40rpx;
  color: rgba(51, 50, 50, 0.945);
}

.list .item .info .btn{
  font-size: 40rpx;
  text-align: left;
  margin-left: 25rpx;
  /* margin-right: 25rpx; */
  line-height: 40rpx;
  color: rgba(36, 62, 87, 0.795);
}

.mapPage{
  width: 100%;
  /* height: 100%; */
  position: relative;
}
.mapPage .list{
  /* width: 0rpx; */
  position: relative;
  left: 0;
  right: 0;
  bottom: 0;
  top:0;
  margin: auto;
  border-radius: 8rpx;
}
.mapPage .map{
  width: 100%;
  height: 1000rpx;
}

.quickBtns{
  position: fixed;
  right: 10rpx;
  bottom: 160rpx;
  z-index: 1;
}
.quickBtns .btn{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .2);
  margin-top: 30rpx;
  text-align: center;
  font-size: 24rpx;
  position: relative;
}
.quickBtns .btn .item{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.quickBtns .btn .text{
  margin-top: 8rpx;
  width: 100%;
  text-align: center;
  line-height: 1;
}
.quickBtns .btn .iconfont{
  font-size: 40rpx;
  width: 100%;
}
.quickBtns .help{
  background: #fff;
}
.quickBtnsLf{
  right: 0;
  left: 30rpx;
}
.quickBtnsLf .location{
  background: #fff;
}
.enterBtn{
  position: fixed;
  bottom:50rpx;
  left: 50%;
  margin-left: -170rpx;
  width: 340rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  border-radius: 100rpx;
  font-size: 34rpx;
}
.bt{
  height: 100rpx;
  margin-bottom: 50rpx;
}

.noStoreInfo {
  font-size: 32rpx;
  text-align: center;
  margin: 100rpx;
}
.noStoreBtn{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: var(--main-color);
}