.taiqiu2 {
  background-color: #121212 !important;
}
.taiqiu2 .banner swiper {
  width: 100%;
  height: 600rpx;
  overflow: hidden;
}

.taiqiu2 .banner image {
  width: 100%;
  height: 100%;
}


.taiqiu2 .store {
  padding: 10rpx 40rpx 10rpx 40rpx;
  background-color: #121212;
  text-align: center;
}

.taiqiu2 .store .info {
  display: flex;
  justify-content: flex-start;
}
.taiqiu2 .store .info .img {
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.taiqiu2 .store .info .storeName {
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  align-items: center;
  line-height: 80rpx;
  margin-left: 20rpx;
  font-weight: bold;
}
.taiqiu2 .store .info .qiehuan{
  text-align: center;
  align-items: center;
  margin-left: 30rpx;
  display: flex;
  justify-content: center;
  font-weight: bold;
}

.taiqiu2 .store .buttom{
  display: flex;
  justify-content: space-between;
  /* margin-top: 20rpx; */
  /* background-color: #f5f5f5; */
  padding: 20rpx 20rpx;
  border-radius: 15rpx;
}

.taiqiu2 .store .icon {
  display: flex;
  justify-content: space-between;
}


.taiqiu2 .store .buttom .address{
  color: #fff;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  
}

.taiqiu2 .store .buttom .address .info{
  font-size: 24rpx;
  text-align: left;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

