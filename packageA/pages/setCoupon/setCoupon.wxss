/* pages/setCoupon/setCoupon.wxss */
page {
  background: #f5f5f5;
}

.tabs {
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 45px;
}

.tabs .van-dropdown-menu {
  border-bottom: 1rpx solid #ddd;
  height: 45px;
}

.tabs .van-dropdown-menu__title {
  font-size: 28rpx !important;
}

.tabs .van-dropdown-menu {
  box-shadow: none !important;
}

.container {
  padding: 45px 16rpx 120rpx;
}

.list {
  padding: 16rpx 0;
  display: inline-block;
  width: 100%;
}

.list .item {
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  padding: 10rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.list .item:last-child {
  margin-bottom: 0;
}

/* 渐变背景基础样式 */
.gradient-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  right: 0;
  top: 0;
  z-index: -1;
  border-radius: 20rpx;
}

/* 红色渐变背景 */
.gradient-red {
  background: linear-gradient(135deg, #ff4757 0%, #ff6b7a 50%, #ff8a9b 100%);
}

.gradient-red::before {
  content: '';
  position: absolute;
  top: -20rpx;
  right: 160rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.12);
  border-radius: 50%;
}

.gradient-red::after {
  content: '';
  position: absolute;
  bottom: 20rpx;
  left: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

/* 黄色渐变背景 */
.gradient-yellow {
  background: linear-gradient(135deg, #ff8c42 0%, #ffa726 30%, #ffcc02 100%);
}

.gradient-yellow::before {
  content: '';
  position: absolute;
  top: 40rpx;
  right: 120rpx;
  width: 240rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.gradient-yellow::after {
  content: '';
  position: absolute;
  bottom: -40rpx;
  left: 80rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

/* 蓝色渐变背景 */
.gradient-blue {
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #4facfe 100%);
}

.gradient-blue::before {
  content: '';
  position: absolute;
  top: 60rpx;
  right: 100rpx;
  width: 280rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.gradient-blue::after {
  content: '';
  position: absolute;
  bottom: -60rpx;
  left: 120rpx;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 50%;
}

.list .item .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  font-size: 26rpx;
  line-height: 40rpx;
  height: 260rpx;
  padding: 20rpx 0 0 0;
}

.list .item .info .name {
  font-size: 34rpx;
  font-weight: 600;
}

.list .item .info .text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list .item .info label {
  flex-shrink: 0;
  display: block;
  text-align: justify;
  text-align-last: justify;
}

.list .item .info .expired {
  color: #b10808;
}

.list .item .info .btns .btn {
  margin-top: 30rpx;
  padding: 0;
  width: 180rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  color: #fff;
}

.list .btns {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.list .item .info .btns .yellow {
  background-color: #f1ac2cd7;
  font-weight: 600;
  color: #fff;
}

.list .item .info .btns .primary {
  background-color: #27c0fdf8;
  font-weight: 600;
  color: #fff;
}

.bt {
  background-color: #fff;
}

.bt .bottom {
  z-index: 2;
  width: 430rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  bottom: 30rpx;
  left: 160rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
}
