    <view class="title">收入统计</view>
    <van-tabs active="{{ active3 }}" bind:change="onChange" data-type="3" title-active-color="{{mainColor}}" color="{{mainColor}}" title-inactive-color="#333">
      <van-tab title="收入明细">
        <view class="charts">
          <block wx:if="{{income.length}}">
            <view class="roomtime">
