/* pages/deviceList/deviceList.wxss */
.tabs {
  background-color: #fff;
}

.tabs .van-dropdown-menu {
  border-bottom: 1rpx solid #ddd;
  height: 45px;
}

.tabs .van-dropdown-menu__title {
  font-size: 30rpx !important;
}

.tabs .van-dropdown-menu {
  box-shadow: none !important;
}

.container {}

.list {
  padding-top: 20rpx;
}

.list .item {
  border-radius: 10rpx;
  margin: 0rpx 20rpx;
  padding: 20rpx;
  height: 110rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-start;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list .item .line1 {
  margin-right: 40rpx;
}

.list .item .line2 .del {
  position: absolute;
  right: 60rpx;
  font-size: 22rpx;
  color: #555555;
}

.list .item.online {
  background-color: var(--main-color);
  color: #fff;
  /* background-image: linear-gradient(181.2deg, rgb(173, 222, 247) 10.5%, rgba(115, 230, 250, 0.678) 86.8%); */
}

.list .item.offline {
  /* color:#fff; */
  background-image: linear-gradient(181.2deg, rgb(228, 228, 228) 10.5%, #ceccc9 86.8%);
}

.container .buttom {
  margin-top: 20rpx;
  padding-bottom: 150rpx;
  text-align: center;
}

.bottom {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 30rpx;
}

.bottom .btn {
  font-size: 36rpx;
  width: 200rpx;
  padding: 0rpx 30rpx;
  margin: 0rpx 50rpx;
  border-radius: 50rpx;
}

.dialog {
  margin-top: 20rpx;
}

.picker {
  display: flex;
}

.tips {
  font-size: 24rpx;
  padding-left: 26rpx;
  color: #aaa;
}

.btns {
  display: flex;
  justify-content: start;
}

.btns .btn {
  background-color: #2b8ace;
  font-size: 24rpx;
  color: #fff;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  margin: 5rpx 10rpx;
}

/* wxss */
.table-container {
  width: 100%;
  border: 1rpx solid #ddd;
  font-size: 24rpx;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #ddd;
}

.table-row.header {
  font-weight: bold;
  background-color: #f5f5f5;
}

.table-cell {
  flex: 1;
  padding: 10rpx;
  text-align: center;
  border-right: 1rpx solid #ddd;
}

.table-cell:last-child {
  border-right: none;
}